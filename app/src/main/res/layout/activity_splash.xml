<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:gravity="center"
    android:orientation="vertical"
    android:clipChildren="false"

    tools:context=".ui.activities.started.SplashActivity">

    <FrameLayout
        android:id="@+id/splash_cow_frame"
        android:layout_width="wrap_content"
        android:clipChildren="false"

        android:layout_height="wrap_content"
        android:layout_gravity="center"

        >
        <ImageView
            android:id="@+id/splash_img_background"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_160sdp"
            android:layout_gravity="center"

            android:src="@drawable/splash_cow_background"
            />
<!--        <ImageView-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_width="100dp"-->
<!--            android:layout_height="100dp"-->
<!--            app:tint="@color/blue"-->
<!--            android:src="@drawable/ic_child"/>-->

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/bay_face_lottie"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_170sdp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/splashbabyface" />

    </FrameLayout>

    <TextView
        android:id="@+id/splash_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:elevation="10dp"
        style="@style/text_views"
        android:text="@string/responsive_stories"
        android:textSize="@dimen/_25ssp"
         />

</LinearLayout>