<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:scrolling_image_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:id="@+id/parent_learn_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mediumGray"
        tools:context=".ui.activities.learn.LearnActivity">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            >

            <include
                android:id="@+id/learn_loading"
                layout="@layout/loading" />

        </FrameLayout>


        <FrameLayout
            android:id="@+id/learn_container_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mediumGray">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/mediumGray"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/strokeColor"
                    app:strokeWidth="1dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <com.q42.android.scrollingimageview.ScrollingImageView
                            android:id="@+id/learn_scroll"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:scaleType="fitXY"
                            android:visibility="gone"
                            scrolling_image_view:initialState="started"
                            scrolling_image_view:source="@drawable/tst1_background"
                            scrolling_image_view:speed="60dp" />

                        <FrameLayout
                            android:id="@+id/learn_FrameLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.3" />


                    </FrameLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:stackFromEnd="true"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_35sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_6sdp"

                        />

                    <FrameLayout
                        android:id="@+id/framelayout_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/rv_title"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true">



                        <ImageView
                            android:id="@+id/img_click"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_gravity="bottom|start"
                            android:layout_margin="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_18sdp"
                            android:background="@drawable/button_rounded"
                            android:backgroundTint="@color/red2"
                            android:backgroundTintMode="add"
                            android:foreground="@drawable/btn_foreground"
                            android:rotation="@integer/locale_mirror_flip"
                            android:src="@drawable/ic_next"
                            app:tint="@color/white"

                            />

                    </FrameLayout>


                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/cat_txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingBottom="@dimen/_5sdp"

                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:paddingStart="@dimen/_30sdp"
                android:paddingEnd="@dimen/_30sdp"
                android:background="@drawable/rounded"
                android:text="@string/animals"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_20ssp" />

        </FrameLayout>


    </FrameLayout>
</layout>