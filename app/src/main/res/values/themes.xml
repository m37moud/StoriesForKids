<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ResponsiveStories" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="fontFamily">@font/courgette</item>
        <!-- Secondary brand color. -->
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashScreenStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/courgette</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowDisablePreview">true</item>

    </style>

    <style name="StartScreenStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/courgette</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowFullscreen">true</item>

    </style>
    <style name="MainScreenStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/courgette</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowFullscreen">true</item>

    </style>
    <style name="WebViewActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/arabic</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="ViewPagerScreenStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/courgette</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="StoryScreenStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/courgette</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="LearnScreenStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/courgette</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="Theme.ResponsiveStories.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/courgette</item>
    </style>

    <style name="Wallpaper" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="fontFamily">@font/courgette</item>
    </style>

    <style name="Theme.ResponsiveStories.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ResponsiveStories.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="fontFamily">@font/courgette</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/chip_text_color</item>
    </style>


    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="fontFamily">@font/courgette</item>

        <item name="background">@color/actionBarBackgroundColor</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>
    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogAnimation">
        <item name="fontFamily">@font/courgette</item>
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_bottom</item>
    </style>


    <style name="Loading" parent="Theme.MaterialComponents.DayNight.NoActionBar"
        >
        <item name="android:windowBackground">@drawable/loading_theme</item>
    </style>
</resources>